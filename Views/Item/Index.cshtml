@model IEnumerable<Item>

@{
    ViewData["Title"] = "Items";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class=text-primary>Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary btn-lg" asp-controller="Item" asp-action="Create">Create New Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="text-center">
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td width="25%">
                            @item.ItemName
                        </td>
                        <td width="25%">
                            @item.Borrower
                        </td>
                        <td width="25%">
                            @item.Lender
                        </td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-success mx-1" asp-controller="Item" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-danger mx-1" asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet.</p>
    }
</div>